{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"], // TODO: REMOVE
      "@cmp/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles*"],
      "@docs": ["src/layouts/MainLayout.astro"], // TODO: REMOVE
      "@changelogs": ["src/layouts/ChangelogLayout.astro"] // TODO: Remove
    }
  }
}
